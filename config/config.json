{
    "monitor": {
        "watch_directories": [
            "~/Documents",
            "~/Desktop",
            "~/Downloads"
        ],
        "exclude_directories": [
            "/proc",
            "/sys",
            "/dev",
            "/run",
            "__pycache__",
            ".git",
            "node_modules"
        ],
        "file_extension_filter": [],
        "recursive": true
    },
    "entropy": {
        "baseline_db_path": "data/entropy_baselines.db",
        "delta_threshold": 2.0
    },
    "database": {
        "path": "data/events.db"
    },
    "backup": {
        "vault_path": null
    },
    "response": {
        "safe_mode": false,
        "process_whitelist": []
    },
    "logging": {
        "level": "INFO"
    }
}
